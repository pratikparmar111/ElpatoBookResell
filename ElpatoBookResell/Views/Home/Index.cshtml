@*//branding for Elpatobookresell*@
<div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="7000" style="background-color: darkslategray">
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
        <li data-target="#myCarousel" data-slide-to="3"></li>
    </ol>
    <div class="carousel-inner" role="listbox">
        <div class="item active">
            <img src="~/Images/elaptobookresellcom.jpg" alt="Just Image" class="img-responsive" />
            <p>ElpatoBookResell.</p>
        </div>
        <div class="item">
            <img src="~/Images/pocketMoney.jpg" alt="Just Image" class="img-responsive" />

            <div class="carousel-caption" role="option">
                <p>
                    Sell Your books for pocket Money
                </p>
            </div>
        </div>
        <div class="item">
            <img src="~/Images/sellYoueOldBooks.jpg" alt="Just Image" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                    Sell Your books and get new books for less
                </p>
            </div>
        </div>
        <div class="item">
            <img src="~/Images/primemembereee.jpg" alt="Just Image" class="img-responsive" />
            <div class="carousel-caption" role="option">
                prime member get 12% dicount in the final order
                <a class="btn btn-default" href="~/Manage/Index">
                    Buy prime
                </a>
            </div>
        </div>
    </div>
    <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

@*//only Admin can edit*@ 
@if (Request.IsAuthenticated && User.IsInRole("Admin"))
{
    <div class="row">
        <div class="col-md-4 ">
            <div class="container1">
                <h2>Catalog </h2>
                <p>
                    @Html.Raw((String)ViewBag.Message_catalog)
                </p>
                <div class="middle">
                    <div class="text" onclick="redirectEditor(1);">click to Edit</div>
                </div>
            </div>
        </div>

        <div class="col-md-4 ">
            <div class="container1">
                <h2>Products </h2>
                <p>
                    @Html.Raw((String)ViewBag.Message_Products)
                </p>
                <div class="middle">
                    <div class="text" onclick="redirectEditor(8);">click to Edit</div>
                </div>
            </div>
        </div>

        <div class="col-md-4 ">
            <div class="container1">
                <h2>Prime Member</h2>
                <p>
                    @Html.Raw((String)ViewBag.Message_Prime)
                </p>
                <div class="middle">
                    <div class="text" onclick="redirectEditor(12);">click to Edit</div>
                </div>
            </div>
        </div>
    </div>

    <script>

        function redirectEditor(val) {
            window.location.replace("../pageckeditor/Edit/" + val);

        }
    </script>
    <style>
        .container1 {
            position: relative;
            width: 95%;
        }

        .image {
            opacity: 1;
            display: block;
            width: 100%;
            height: auto;
            transition: .5s ease;
            backface-visibility: hidden;
        }

        .middle {
            transition: .5s ease;
            opacity: 0;
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            -ms-transform: translate(-50%, -50%);
            cursor: pointer;
        }

        .container:hover .image {
            opacity: 0.3;
        }

        .container:hover .middle {
            opacity: 1;
        }

        .text {
            background-color: #4CAF50;
            color: white;
            font-size: 16px;
            padding: 16px 32px;
        }
    </style>
}

else
{
    <div class="row">
        <div class="col-md-4">
            <h2>Catalog</h2>
            <p>
                @Html.Raw((String)ViewBag.Message_catalog)
            </p>
        </div>
        <div class="col-md-4">
            <h2>Products</h2>
            <p>
                @Html.Raw((String)ViewBag.Message_Products)
            </p>
        </div>
        <div class="col-md-4">
            <h2>Prime Member</h2>
            <p>
                @Html.Raw((String)ViewBag.Message_Prime)
            </p>
        </div>
    </div>
}






























